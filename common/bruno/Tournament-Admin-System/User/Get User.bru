meta {
  name: Get User
  type: graphql
  seq: 3
}

post {
  url: {{host}}
  body: graphql
  auth: none
}

body:graphql {
  query
  {
    user(id:3)
    {
      id
      name
      seat
      isGlobalAdmin
      teams
      {
        team
        {
          name
        }
      }
      tournaments
      {
        tournament
        {
          name
        }
        initialSeed
        finalRank
      }
      adminTournaments
      {
        tournament
        {
          name
        }
      }
      teams
      {
        team
        {
          name
        }
        isTeamCaptain
      }
    }
  }
}
